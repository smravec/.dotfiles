
#Reload keybindings
super + Escape
	pkill -USR1 -x sxhkd

#Open apps shortcuts

#Launch Alacritty ( terminal emulator )
super + Return
	alacritty

#Launch Rofi ( application launcher )
super + r
	rofi -show run

